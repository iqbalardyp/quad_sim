<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rotor">
  <xacro:macro name="rotor" params="id">
    <link name="rotor${id}_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="1e-04"/>
        <inertia ixx="1e-06" ixy="0.0" ixz="0.0" iyy="1e-06" iyz="0.0" izz="1e-06"/>
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://quad_sim/quadcopter/meshes/quad_rotor.dae"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://quad_sim/quadcopter/meshes/quad_rotor.stl"/>
        </geometry>
      </collision>
    </link>
  <gazebo reference="rotor_link">
    <material>Gazebo/Gray</material>
  </gazebo>
  </xacro:macro>
</robot>
